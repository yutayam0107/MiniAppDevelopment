%body
  %div.header
    新規ユーザー登録
  %div.contents__one
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :email
        = f.email_field :email, autofocus: true, autocomplete: "email",class:"contents__one__field"
      .field
        = f.label :username
        = f.text_field :username, class:"contents__one__field",autofocus: true, maxlength: "10",placeholder:"max(10)"
      .field
        = f.label :password
        - if @minimum_password_length
          %em
        = f.password_field :password, autocomplete: "new-password",class:"contents__one__field",placeholder: "8-20文字"
      .field
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: "new-password",class:"contents__one__field",placeholder: "8-20文字"
      %br/
      .actions
        = f.submit "ユーザー登録",class:"contents__one__field"
